meta {
  name: Guest Login
  type: http
  seq: 2
}

post {
  url: {{base_url}}/api/auth/guest
  body: json
  auth: none
}

headers {
  Content-Type: application/json
}

body:json {
  {
    "name": "Test Guest",
    "email": "testguest@example.com",
    "phone": "9876543210"
  }
}

tests {
  expect(res.status).to.equal(200)
  expect(res.body).to.have.property("user")
  expect(res.body).to.have.property("token")
  expect(res.body.user.isGuest).to.equal(true)
  expect(res.body.user.isVerified).to.equal(false)
  expect(res.body.verificationRequired).to.equal(true)
  expect(res.body.verificationMethod).to.equal("email")
}
