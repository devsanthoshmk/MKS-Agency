meta {
  name: Get Order by ID
  type: http
  seq: 6
}

get {
  url: {{base_url}}/api/orders/{{order_id}}
  body: none
  auth: none
}

headers {
  Authorization: Bearer {{auth_token}}
}

tests {
  expect(res.status).to.be.oneOf([200, 403, 404])
  if (res.status === 200) {
    expect(res.body).to.have.property("order")
    expect(res.body.order).to.have.property("orderNumber")
    expect(res.body.order).to.have.property("status")
  }
}
